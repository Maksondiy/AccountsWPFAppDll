<Window x:Class="WpfAppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">

        <ListBox x:Name="lbAccounts" d:ItemsSource="{d:SampleData ItemCount=7}" />
        <ListBox x:Name="rbAccounts" Margin="542,0,0,0" d:ItemsSource="{d:SampleData ItemCount=7}" />
        <TextBox x:Name="tbTotalBalance" Margin="368,0,258,0" />
    </Grid>
</Window>
